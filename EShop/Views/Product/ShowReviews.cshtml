@model System.Data.DataTable
@{
    ViewBag.Title = "ShowReviews";
}

<h2>Product Reviews</h2>

<table class="table table-bordered table-striped">
    <tr>

        <th>Customer Name</th>
        <th>Stars</th>
        <th>Reviews</th>
        @*<th></th>*@
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>

            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>

        </tr>

    }
    


</table><br />
<a href=" @Url.Action("ViewItem", "Product", new { @id = Model.Rows[0][1] }) ">Back to Item Details</a>
<br />
<a href="@Url.Action("AddReview", "Product", new {@id = Model.Rows[0][1] })">Add Review</a>

