@model System.Data.DataTable
<script src="~/Scripts/Validate.js"></script>
<tr>
    <th>Product ID</th>
    <th>Product Name</th>
    <th>Price</th>
    <th>Product Image</th>
    <th>Keyword Search</th>
    <th>Category</th>
    <th>Action</th>
</tr>
@for (int i = 0; i < Model.Rows.Count; i++)
{
    <tr>
        <td>@Model.Rows[i][0]</td>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td><img src="@Url.Content(@Model.Rows[i][3].ToString())" , width="150" height="100" /></td>
        <td>@Model.Rows[i][4]</td>
        <td>@Model.Rows[i][5]</td>
        <td>
            <a href=" @Url.Action("ViewInventoryItem", "Product", new { @id = Model.Rows[i][0] }) ">View Item Details</a><br />
            <a href=" @Url.Action("EditInventory", "Product", new { @id = Model.Rows[i][0] }) ">Edit Item</a><br />
            <a href="@Url.Action("DeleteInventoryItem", "Product", new { @id = Model.Rows[i][0], @onclick = "deleteid(this)" })">Delete Item</a>

        </td>
    </tr>
}
