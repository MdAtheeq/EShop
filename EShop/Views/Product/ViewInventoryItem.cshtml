@model EShop.Models.ProductDetails
@{
    ViewBag.Title = "ViewInventoryItem";
}

<h2>View Inventory Item</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>ProductID</th>
        <td>@Model.ProductID</td>
    </tr>

    <tr>
        <th>Brand</th>
        <td>@Model.Brand</td>
    </tr>
    <tr>
        <th>Model Name</th>
        <td>@Model.ModelName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Size</th>
        <td>@Model.Size</td>
    </tr>
    <tr>
        <th>Expected Delivery</th>
        <td>@Model.ExpectedDelivery</td>
    </tr>
    <tr>
        <th>Cash on Delivery</th>
        <td>@Model.COD</td>
    </tr>

    <tr>
        <th>Vendor Cost</th>
        <td>@Model.VendorCost</td>
    </tr>

    <tr>
        <th>Selling Price</th>
        <td>@Model.SellingPrice</td>
    </tr>

    <tr>
        <th>Seller</th>
        <td>@Model.Seller</td>
    </tr>
    
    <tr>
        <th>Imported From</th>
        <td>@Model.ImportedFrom</td>
    </tr>

    <tr>
        <th>Warehouse Location</th>
        <td>@Model.WarehouseLocation</td>
    </tr>


</table>

<a href=" @Url.Action("ShowInventory", "Product", new { @id = Model.ProductID }) ">Back to Inventory</a>
<br />
<a href="@Url.Action("EditInventoryDetails", "Product", new {@id = Model.ProductID})"> Edit Details</a>

