@model EShop.Models.AdminDetails
@{
    ViewBag.Title = "AddAdmin";
}

<h2>Add Admin</h2>
<script src="~/Scripts/Validate.js"></script>
@using (Html.BeginForm("AddAdmin", "Product", FormMethod.Post))
{
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "control-label col-md-2" })

            
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdminEmail, new { @onkeyup = "checkemail()" } )
                @*<b>Email:</b> <input type="email" id="txtemail" onkeyup="checkemail()" />*@
                <label id="adminemail" style="color:red; visibility:hidden">This field is Required</label>
                <span id="spanmsg"></span>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdminPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                <label id="adminpassword" style="color:red; visibility:hidden;">This field is Required</label>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" onclick="return admin();" class="btn btn-default" />
                
            </div>
        </div>
    </div>
}