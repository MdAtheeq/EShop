@model System.Data.DataTable

@{
    ViewBag.Title = "SearchProducts";
}

<h3>Search Products</h3>
@using (Html.BeginForm("SearchProducts", "Product", FormMethod.Post))
{
    <div>
        <b> Search Products </b> <input type="text" name="search" id="search" />

        <input type="submit" value="Submit" />
    </div><br />
}
@if (Model.Rows.Count > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>ProductID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Product Image</th>
            <th>Action</th>
        </tr>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td><img src="@Url.Content(@Model.Rows[i][3].ToString())" , width="150" height="100" /></td>
                <td>
                    <a href=" @Url.Action("ViewItem", "Product", new { @id = Model.Rows[i][0] }) ">View Item</a>

                </td>
            </tr>

        }


    </table>

}
